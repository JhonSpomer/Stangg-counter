<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stangg_original_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/LifeTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text=" 40"
        android:textColor="#0426FF"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@+id/ButtonMinus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonPlus" />

    <Button
        android:id="@+id/ButtonPlus"
        android:layout_width="160dp"
        android:layout_height="82dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#0B03FF"
        android:onClick="IncreaseLife"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#5AFF00" />

    <Button
        android:id="@+id/ButtonMinus"
        android:layout_width="166dp"
        android:layout_height="84dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#021BFA"
        android:onClick="DecreaseLife"
        android:text="-"
        android:textColor="#EFEEEE"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#FB0318" />

    <Button
        android:id="@+id/ButtonReset"
        android:layout_width="197dp"
        android:layout_height="69dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#0410FA"
        android:onClick="ResetStats"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#4FE40F" />

    <TextView
        android:id="@+id/TotalStangg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="0"
        android:textColor="#0004FF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/ButtonStangg"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/ButtonStangg"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#002AFF"
        android:onClick="IncreaseStangg"
        android:text="STANGG!"
        app:layout_constraintBottom_toTopOf="@+id/ButtonReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#E60606" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Stanng Counter!"
        android:textColor="#0442FA"
        android:textColorHighlight="#303849"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/TotalStangg"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>